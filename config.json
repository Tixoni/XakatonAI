{
  "input_file": "short_vid.mp4",
  "yolo": {
    "model": "yolo11m.pt", 
    "device": "cpu"
  },
  "detection": {
    "confidence_threshold": 0.45,
    "target_classes": [0, 6],
    "class_names": {
      "0": "person",
      "6": "train"
    }
  },
  "colors": {
    "person": [0, 255, 0],
    "train": [255, 0, 0]
  },
  "color_filters": {
    "enabled": true,
    "train": {
      "anti_color_hsv": [90, 50, 30],
      "anti_color_range": 30,
      "anti_match_threshold": 0.4
    }
  },
  "video_optimization": {
    "target_fps": 5,
    "max_width": 1280,
    "max_height": 720,
    "frame_skip": 1,
    "maintain_aspect_ratio": true,
    "keep_width_native": true
  },
  "processing": {
    "show_preview": true,
    "half_precision": false,
    "save_results": true,
    "output_dir": "results"
  },
  "debug": {
    "show_filtered_objects": true,
    "log_detection_details": true
  }
}